---
import ExternalLink from "./ExternalLink.astro";
import RelativeTime from "./RelativeTime";

const commitSha = import.meta.env.WORKERS_CI_COMMIT_SHA;
const repoUrl = "https://github.com/PythonAtSea/site";

let commitTime: string | null = null;
if (commitSha) {
  try {
    const res = await fetch(
      `https://api.github.com/repos/PythonAtSea/site/commits/${commitSha}`
    );
    if (res.ok) {
      const data = await res.json();
      commitTime = data.commit?.committer?.date ?? null;
    }
  } catch {}
}

const isCloudflare = !!commitSha;
const shortSha = commitSha ? commitSha.slice(0, 7) : null;
---

<footer
  class="mt-10 px-10 py-5 border-t border-(--color-text)/20 text-sm text-(--color-text)/60 flex flex-row"
>
  {
    isCloudflare ? (
      <p>
        commit{" "}
        <ExternalLink
          href={`${repoUrl}/commit/${commitSha}`}
          noIcon
          class="font-mono"
        >
          {shortSha}
        </ExternalLink>{" "}
        from{" "}
        {commitTime ? (
          <RelativeTime commitTime={commitTime} client:load />
        ) : (
          "unknown"
        )}
      </p>
    ) : (
      <p>
        commit <span class="font-mono">DEV000</span> from a eternity ago
      </p>
    )
  }
  <div
    class={`ml-auto px-1 ${isCloudflare ? "bg-green-900 text-green-100" : "bg-amber-900 text-amber-100"}`}
  >
    {isCloudflare ? "PROD" : "DEV"}
  </div>
</footer>
